#!/usr/bin/env ruby

require 'pp'
require './lib/story'
require './lib/runner'
require './lib/link_builder'
require './lib/commands'

command = ARGV.shift

case command
when 'create'
  CliTasks::Commands.create *ARGV
when 'rebuild'
  CliTasks::Commands.rebuild
when 'start'
when 'finish'
when 'tag'
when 'comment'
when 'list'
  CliTasks::Commands.list *ARGV
else
  CliTasks::Commands.list *ARGV
end

